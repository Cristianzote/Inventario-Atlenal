@page "/movements/create/{type}/{productId}"

<div class="flex h-screen">
    <div class="w-3/5 overflow-y-auto">

        <!-- Navbar -->
        <div class="top-0 pt-2 pb-1 bg-green-600 sticky z-10">
            <div class="mb-2 flex justify-around">
                <input class="py-2 px-3 bg-green-500 text-green-900 placeholder-green-900 border-green-900 w-2/5 rounded-md border focus:outline-none focus:ring focus:ring-green-900"
                       type="search"
                       placeholder="Buscar productos..." />
                <select id="category" name="category" class="py-2 px-3 bg-green-500 text-green-900 border-green-900 w-2/5 rounded-md border focus:outline-none focus:ring focus:ring-green-900">
                    <option value="todos">Todos</option>
                    <option value="gaseosa">Gaseosa</option>
                    <option value="bebidas">Bebidas</option>
                    <option value="alcohol">Alcohol</option>
                    <option value="medicina">Medicina</option>
                    <option value="otros">Otros</option>
                </select>
            </div>
        </div>

        <!-- Product -->
        <div class="gap-4 p-2 mb-24 mt-8 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4">

            @for (int i = 0; i < 15; i++)
            {
                int aux = i;
                <div @onclick="() => modal.Toogle([aux.ToString()])" class="bg-white rounded-lg shadow-md overflow-hidden cursor-pointer">
                    <img src="https://cdn-icons-png.freepik.com/512/803/803728.png"
                    alt="Product Image"
                    width="180"
                    height="180"
                         class="aspect-square w-full object-cover"
                    style="aspect-ratio: 1 / 1; object-fit: cover;" />
                    <div class="p-4">
                        <h3 class="text-balance text-center text-sm">Ron viejo de Caldas</h3>
                        <p class="text-gray-500 text-center text-sm">Alcochol</p>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-md overflow-hidden cursor-pointer">
                    <img src="https://cdn-icons-png.freepik.com/512/803/803728.png"
                         alt="Product Image"
                         width="180"
                         height="180"
                         class="aspect-square w-full object-cover"
                         style="aspect-ratio: 1 / 1; object-fit: cover;" />
                    <div class="p-4">
                        <h3 class="text-balance text-center text-sm">Tinto</h3>
                        <p class="text-gray-500 text-center text-sm">Bebida</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Details -->
    <div class="bg-green-600 mb-24 w-2/5 overflow-y-auto sm:w-2/5">
        @for (int i = 0; i < 15; i++)
        {
            <div class="p-3 space-y-1 sm:p-4">
                <div class="bg-white p-3 flex flex-col items-center justify-between rounded-lg shadow-md sm:flex-row">
                    <div class="mb-2 sm:mb-0">
                        <h3 class="text-md font-medium">Ron viejo de Caldas</h3>
                        <p class="text-gray-500">Garrafa</p>
                    </div>
                    <div>
                        <div class="space-x-4 flex items-center">
                            <div class="space-x-2 flex items-center">
                                <button class="bg-gray-200 px-1 py-1 rounded-l-md hover:bg-gray-300">-</button>
                                <span>1</span>
                                <button class="bg-gray-200 px-1 py-1 rounded-r-md hover:bg-gray-300">+</button>
                            </div>
                            @if (platform == "WinUI")
                            {
                                <button class="bg-red-500 text-white px-1 py-1 rounded-md hover:bg-red-600">Eliminar</button>
                            }
                            else
                            {
                                <button class="bg-red-500 text-white px-1 py-1 rounded-md hover:bg-red-600">X</button>
                            }
                        </div>

                        @if (Type != "inflow")
                        {
                            <div class="space-x-4 mt-2 flex items-center">
                                <input id="detailSale" name="detailSale" type="checkbox" class="h-4 w-4 bg-green-500 text-green-900 border-green-300 rounded border focus:ring focus:ring-green-500">
                                <label class="text-green-900 text-sm">¿Venta menudeada / trago?</label>
                            </div>
                        }
                    </div>
                </div>

            </div>

            <div class="p-3 space-y-1 sm:p-4">
                <div class="bg-white p-3 flex flex-col items-center justify-between rounded-lg shadow-md sm:flex-row">
                    <div class="mb-2 sm:mb-0">
                        <h3 class="text-md font-medium">Tinto</h3>
                    </div>
                    <div>
                        <div class="space-x-4 flex items-center">
                            <div class="space-x-2 flex items-center">
                                <button class="bg-gray-200 px-1 py-1 rounded-l-md hover:bg-gray-300">-</button>
                                <span>1</span>
                                <button class="bg-gray-200 px-1 py-1 rounded-r-md hover:bg-gray-300">+</button>
                            </div>
                            @if (platform == "WinUI")
                            {
                                <button class="bg-red-500 text-white px-1 py-1 rounded-md hover:bg-red-600">Eliminar</button>
                            }
                            else
                            {
                                <button class="bg-red-500 text-white px-1 py-1 rounded-md hover:bg-red-600">X</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <!-- Pay check -->
    <div class="bottom-0 left-0 bg-green-600 py-2 px-6 mb-14 mr-2.5 fixed flex w-full items-center justify-between">
        <div class="pt-2 flex justify-center text-center text-lg font-bold">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
            </svg>
            <p class="text-green-950">Total: $79.000</p>
        </div>
        <div class="space-x-4 flex">
            <div class="flex justify-end">
                <button type="button" class="mr-4 bg-red-500 text-white py-2 px-4 inline-block rounded-md font-semibold transition duration-300 hover:bg-red-700 focus:outline-none focus:ring focus:ring-red-200">Cancelar</button>
                <button type="submit" class="bg-green-500 text-white py-2 px-4 mr-4 inline-block rounded-md font-semibold transition duration-300 hover:bg-green-700 focus:outline-none focus:ring focus:ring-green-200">Proceder</button>
             </div>
        </div>
    </div>

</div>

<PresentationModal @ref=modal />


@code {
    [Parameter]
    public string ProductId { get; set; }
    [Parameter]
    public string Type { get; set; }

    string platform = DeviceInfo.Current.Platform.ToString();
}
