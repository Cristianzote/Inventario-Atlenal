@page "/product/detail"

<div class="pb-24 pt-8 bg-green-800">
    <div class="w-5/6 mx-auto bg-white p-6 rounded-lg shadow-md ring-2 ring-green-700">
        <h1 class="text-lg font-medium text-green-900 mb-4">Detalles de Ron viejo de Caldas</h1>

        <!-- Product Name -->
        <div class="mb-6">
            <label for="name" class="block text-sm font-medium text-green-900 mb-1">Nombre del producto</label>
            <input type="text" id="name" name="name" value="Ron viejo de Caldas" class="w-full py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500">
        </div>

        <!-- Product Category (Select Dropdown) -->
        <div class="mb-6">
            <label for="category" class="block text-sm font-medium text-green-900 mb-1">Categoría</label>
            <select id="category" name="category" class="w-full py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500">
                <option value="alcohol">Alcohol</option>
                <option value="gaseosa">Gaseosa</option>
                <option value="bebidas">Bebidas</option>
                <option value="medicina">Medicina</option>
                <option value="otros">Otros</option>
            </select>
        </div>

        <!-- Presentation 1 Component -->
        <div class="mb-6 border-b border-green-300 pb-4">
            <h2 class="text-lg font-medium text-green-900 mb-4">Presentación 1</h2>

            <!-- Name of Presentation -->
            <div class="mb-4">
                <label for="presentationName" class="block text-sm font-medium text-green-900 mb-1">Nombre de la presentación</label>
                <input type="text" id="presentationName" name="presentationName" value="Media" class="w-full py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500">
            </div>

            <!-- Income Price and Outcome Price (Combined) -->
            <div class="flex justify-between mb-4">
                <div class="w-1/2 pr-2">
                    <label for="incomePrice" class="block text-sm font-medium text-green-900 mb-1">Precio de entrada</label>
                    <input type="number" id="incomePrice" name="incomePrice" value="20000" class="w-full py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500">
                </div>
                <div class="w-1/2 pl-2">
                    <label for="outcomePrice" class="block text-sm font-medium text-green-900 mb-1">Precio de salida</label>
                    <input type="number" id="outcomePrice" name="outcomePrice" value="30000" class="w-full py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500">
                </div>
            </div>

            <!-- Detail Sale Switch -->
            <div class="flex items-center mb-4">
                <input id="detailSale" name="detailSale" type="checkbox" class="h-4 w-4 bg-green-500 text-green-900 focus:ring focus:ring-green-500 border border-green-300 rounded mr-2">
                <label for="detailSale" class="text-sm font-medium text-green-900">¿Presentación con venta menudeada?</label>
            </div>

            <!-- Detail Count Input (Shown if Detail Sale Switch is checked) -->
            <div class="flex items-center">
                <label for="detailCount" class="text-sm font-medium text-green-900">Descartar una unidad cada </label>
                <input type="number" id="detailCount" name="detailCount" class="mx-2 w-16 py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500 ml-2">
                <label for="detailCount" class="text-sm font-medium text-green-900"> ventas menudeadas</label>
            </div>
        </div>

        <!-- Presentation 2 Component -->
        <div class="mb-6 border-b border-green-300 pb-4">
            <div class="w-full flex justify-between">
                <h2 class="text-lg font-medium text-green-900 mb-2">Presentación 2</h2>
                <div class="flex justify-center">
                    <button type="submit" class="bg-red-400 inline-block bg-fuchsia-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring focus:ring-red-200 transition duration-300">Eliminar</button>
                </div>
            </div>

            <!-- Name of Presentation -->
            <div class="mb-4">
                <label for="presentationName" class="block text-sm font-medium text-green-900 mb-1">Nombre de la presentación</label>
                <input type="text" id="presentationName" name="presentationName" value="Garrafa" class="w-full py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500">
            </div>

            <!-- Income Price and Outcome Price (Combined) -->
            <div class="flex justify-between mb-4">
                <div class="w-1/2 pr-2">
                    <label for="incomePrice" class="block text-sm font-medium text-green-900 mb-1">Precio de entrada</label>
                    <input type="number" id="incomePrice" name="incomePrice" value="37000" class="w-full py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500">
                </div>
                <div class="w-1/2 pl-2">
                    <label for="outcomePrice" class="block text-sm font-medium text-green-900 mb-1">Precio de salida</label>
                    <input type="number" id="outcomePrice" name="outcomePrice" value="55000" class="w-full py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500">
                </div>
            </div>

            <!-- Detail Sale Switch -->
            <div class="flex items-center mb-4">
                <input id="detailSale" name="detailSale" type="checkbox" class="h-4 w-4 bg-green-500 text-green-900 focus:ring focus:ring-green-500 border border-green-300 rounded mr-2">
                <label for="detailSale" class="text-sm font-medium text-green-900">¿Presentación con venta menudeada?</label>
            </div>

            <!-- Detail Count Input (Shown if Detail Sale Switch is checked) -->
            <div class="flex items-center">
                <label for="detailCount" class="text-sm font-medium text-green-900">Descartar una unidad cada </label>
                <input type="number" id="detailCount" name="detailCount" value="12" class="mx-2 w-16 py-2 px-3 bg-green-500 text-green-900 border border-green-300 rounded-md focus:outline-none focus:ring focus:ring-green-500 ml-2">
                <label for="detailCount" class="text-sm font-medium text-green-900"> ventas menudeadas</label>
            </div>
        </div>

        <!-- Plus Button (to add more presentations) -->
        <div class="flex justify-center mb-6">
            <button type="button" class="bg-green-400 inline-block bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-full focus:outline-none focus:ring focus:ring-green-200 transition duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
            </button>
        </div>

        <!-- Submit and Cancel Buttons -->
        <div class="flex justify-end">
            <button type="submit" class="bg-green-400 inline-block bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring focus:ring-green-200 transition duration-300 mr-4">
                <a href="/product">Guardar</a>
            </button>
            <button type="button" class="bg-red-400 inline-block bg-fuchsia-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring focus:ring-red-200 transition duration-300">
                <a href="/product">Cancelar</a>
            </button>
        </div>
    </div>
</div>

