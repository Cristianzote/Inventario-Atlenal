@using Inventario.Pages.Layout
@inject NavigationManager navigationManager;

<!-- BottomNavbar.razor -->

<div class="bottom-0 left-0 right-0 bg-green-800 text-white h-14 fixed shadow-md">
    <div class="py-2 flex justify-between">

        <!-- Home Icon -->
        <button @onclick="GoToHome" class="bottom-nav-item nav-item h-8 mt-2.5 flex w-1/6 items-center justify-center">
            @*<NavLink class="nav-link" href="/home">*@
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                </svg>
            @*</NavLink>*@
        </button>

        <!-- Movements Icon -->
        <button @onclick="GoToMovements" class="bottom-nav-item nav-item h-8 mt-2.5 flex w-1/6 items-center justify-center">
            @*<NavLink class="nav-link" href="/movements">*@
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                </svg>
            @*</NavLink>*@
        </button>

        <!-- Products and Marketing Icon -->
        <button @onclick="GoToProducts" class="bottom-nav-item nav-item h-8 mt-2.5 flex w-1/6 items-center justify-center">
            @*<NavLink class="nav-link" href="/product">*@
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m21 7.5-9-5.25L3 7.5m18 0-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
                </svg>
            @*</NavLink>*@
        </button>

        <!-- Expences Icon -->
        <button @onclick="GoToExpences" class="bottom-nav-item nav-item h-8 mt-2.5 flex w-1/6 items-center justify-center">
            @*<NavLink class="nav-link" href="/stats">*@
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
            </svg>
            @*</NavLink>*@
        </button>

        <!-- Stats Icon -->
        <button @onclick="GoToStats" class="bottom-nav-item nav-item h-8 mt-3 flex w-1/6 items-center justify-center">
            @*<NavLink class="nav-link" href="/stats">*@
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 14.25v2.25m3-4.5v4.5m3-6.75v6.75m3-9v9M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z" />
                </svg>
            @*</NavLink>*@
        </button>

    </div>
</div>

@code
{

    private void GoToHome()
    {
        navigationManager.NavigateTo("/home");
    }

    private void GoToMovements()
    {
        navigationManager.NavigateTo("/movements");
    }

    private void GoToProducts()
    {
        navigationManager.NavigateTo("/product");
    }

    private void GoToExpences()
    {
        navigationManager.NavigateTo("/expences");
    }

    private void GoToStats()
    {
        navigationManager.NavigateTo("/stats");
    }
}